{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "vite",
    "electron-dev": "wait-on tcp:5173 && cross-env SKIP_PYTHON=true electron .",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "convert-icon": "node scripts/convert-icon.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.orello.app",
    "productName": "Orello",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "backend_dist",
        "to": "backend_dist"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "axios": "^1.13.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.11",
    "wait-on": "^9.0.3"
  }
}